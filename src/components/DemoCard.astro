---
// import { Badge } from "@/components/ui/badge";
// import { formatDate } from "@/lib/utils"
import { Image } from "astro:assets"
import type { CollectionEntry } from "astro:content"

type Props = CollectionEntry<"demos">;

const post = Astro.props;
---

<div class="animate group space-y-2 rounded-full">
  <a
    href={`/demos/${post.slug}/`}
    class="flex group-hover:-translate-y-2 group-hover:shadow-xl transition duration-500"
  >
    <Image
      class="w-full h-full object-cover rounded-md overflow-hidden"
      width={400}
      height={400}
      src={post.data.coverImage}
      alt="descriptive text"
      transition:name={"img-" + post.slug}
    />
    
  </a>

  <div class="prose dark:prose-invert max-w-none">
    <a href={`/demos/${post.slug}/`} 
    class="group-hover:underline"
    >
     
    <h1 class="font-heading  my-4 text-sm uppercase" transition:name={"title-" + post.slug}>
      {post.data.title}
    </h1>
    </a>
  </div>
