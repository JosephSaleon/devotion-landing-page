  <section class="relative h-screen w-full">

    <div class="absolute h-full w-full flex items-center justify-center">
      <div class='relative w-full h-full flex items-center justify-center'>
        <div class='p-5 text-center'>
          <p class='animate text-lg md:text-xl lg:text-2xl font-semibold opacity-75'>
            avec 
          </p>
          <div class='my-4 animate w-full flex justify-center '>
            <div class="scale-150">
              <DevotionLogo />
            </div>
          </div>

          <!-- <p class='animate my-4 text-2xl md:text-3xl lg:text-4xl font-bold text-black dark:text-white'>
            devotion
          </p> -->
          
