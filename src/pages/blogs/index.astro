---
import BlogCard from "@/components/cards/blog-card.astro"
import PageLayout from "@layouts/PageLayout.astro"
import { getPosts } from "@/lib/fetchers"
// import DemoCard from "@/components/DemoCard.tsx";

const posts = await getPosts();
---

<PageLayout title="Blog">
  <section class="container py-10">

    <div
      class="mt-36 px-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-9 md:gap-y-11 lg:gap-y-16 lg:gap-x-8"
    >
      {posts.map((post) => 
        <BlogCard {...post} />
      )}
    </div>
  </section>
</PageLayout>
